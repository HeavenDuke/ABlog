.box-footer.box-comments
    .comment-header 评论列表
    - for(var index in comments)
        .box-comment
            img.img-circle.img-sm(src="/img/head.png")
            if current_user != null
                a.pull-right(href="#" style="margin-right: 10px;") 回复
                a.pull-right(href="/journals/" + journal._id + "/comments/" + comments[index]._id + "?_method=delete") 删除
            else
                a.pull-right(href="#") 回复
            .comment-text
                .username 匿名用户
                span.text-muted.pull-right= comments[index].created_at.format("yyyy年MM月dd日 hh:mm:ss")
                = comments[index].content
        - var replies = comments[index].replies;
        if replies.length != 0
            .box-comment
                .box-footer.box-comments(style="margin-left: 20px;")
                    - for(var index_r in replies)
                        .box-comment
                            img.img-circle.img-sm(src="/img/head.png")
                            .comment-text
                                .username 匿名用户
                                span.text-muted.pull-right= replies[index_r].created_at.format("yyyy年MM月dd日 hh:mm:ss")
                                = replies[index_r].content
                    .box-comment
                        form(action="/journals/" + journal._id + "/comments/" + comments[index]._id + "/replies" method="POST").margin
                            .form-group
                                label 回复
                                textarea.form-control(name="content" placeholder="请输入您的回复~")
                            button.button.button-block.button-small.button-primary 提交
        else
            .box-comment
                .box-footer.box-comments(style="margin-left: 20px;")
                    .box-comment
                        form(action="/journals/" + journal._id + "/comments/" + comments[index]._id + "/replies" method="POST").margin
                            .form-group
                                label 回复
                                textarea.form-control(name="content" placeholder="请输入您的回复~")
                            button.button.button-block.button-small.button-primary 提交