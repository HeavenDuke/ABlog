extends ../layout/layout

block specified_ref
    link(rel="stylesheet" type="text/css" href="/diaries.css")
    link(rel="stylesheet" type="text/css" href="/theme.css")
    link(rel="stylesheet" type="text/css" href="/index.css")
    link(rel="stylesheet" type="text/css" href="/AdminLTE/css/skins/_all-skins.css")
    link(rel="stylesheet" type="text/css" href="/AdminLTE/css/AdminLTE.min.css")
    link(rel="stylesheet" type="text/css" href="/blueimp-file-upload/css/jquery.fileupload.css")
    link(rel="stylesheet" type="text/css" href="/lightgallery/dist/css/lightgallery.min.css")

block content
    .container
        .row.diary
            .col-lg-12.col-md-12
                .box.box-widget
                    .box-header.with-border
                        .box-header.with-border
                            h3.box-title 每日小记
                            if current_user
                                span.pull-right
                                    button.button.button-pill.button-primary(type="button" data-toggle="modal" data-target="#new_diary_modal") 写日记
                        .box-body
                            ul.timeline
                                li
                                    i.fa.fa-clock-o.bg-gray
                                    .timeline-item
                                        .timeline-body 在未来，一切都还会继续...
                                - last_diary_date = ""
                                - var has_shown_diaries = false;
                                - for(var index in diaries)
                                    if diaries[index].is_public || current_user
                                        - has_shown_diaries = true
                                        if diaries[index].recorded_date.format("yyyy-MM-dd") != last_diary_date
                                            - last_diary_date = diaries[index].recorded_date.format("yyyy-MM-dd")
                                            li.time-label
                                                span.bg-green= diaries[index].recorded_date.format("yyyy年MM月dd日")
                                        li
                                            i(id=diaries[index]._id + "_tag" tag=diaries[index].tag class="fa " + diaries[index].tag_to_icon() + " " + diaries[index].mood_to_color())
                                            .timeline-item
                                                span.time
                                                    .hidden(id=diaries[index]._id + "_date" date=diaries[index].recorded_date.format("yyyy-MM-dd"))
                                                    .hidden(id=diaries[index]._id + "_mood" mood=diaries[index].mood)
                                                    .hidden(id=diaries[index]._id + "_publicity" publicity=diaries[index].is_public.toString())
                                                    .hidden(id=diaries[index]._id + "_images" images=JSON.stringify(diaries[index].images))
                                                        - for(var i = 0; i < diaries[index].images.length; i++)
                                                            .hidden(thumb=Diary.get_thumb_image("/" + diaries[index].images[i]))
                                                    if !diaries[index].is_public
                                                        i.fa.fa-clock-o= "　私密日记"
                                                h3.timeline-header(id=diaries[index]._id + "_brief")= diaries[index].brief
                                                .timeline-body(id=diaries[index]._id + "_content")= diaries[index].content
                                                if diaries[index].images.length != 0
                                                    .timeline-body
                                                        div(id=diaries[index]._id + "_gallery")
                                                            - for(var i = 0; i < diaries[index].images.length; i++)
                                                                a(href="/" + diaries[index].images[i])
                                                                    img.margin.image_thumb(thumb_url=Diary.get_thumb_image("/" + diaries[index].images[i]))
                                                .timeline-footer
                                                    if current_user
                                                        a.btn.btn-xs.btn-warning(diary_id=diaries[index]._id data-toggle="modal" data-target="#edit_diary_modal") 编辑
                                                        a.delete-entry.btn.btn-xs.btn-danger(href="/diaries/" + diaries[index]._id + "?_method=delete" style="margin-left: 10px;") 删除
                                if !has_shown_diaries
                                    li
                                        i.fa.fa-clock-o.bg-gray
                                        .timeline-item
                                            .timeline-body 现在，这里还是一片空虚...
                                li
                                    i.fa.fa-clock-o.bg-gray
                                    .timeline-item
                                        .timeline-body 过去，一切从这里开始
    include ./new
    include ./edit
    include ./reference
    include ./preview